  - var baseUrl = config.baseUrl || './'

doctype html
<html class='no-js' lang='en'>

head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
  meta(http-equiv="Cache-control" content="no-cache")
  title Feng Shui Mastery Online Courses
  link(rel="icon" href="favicon.png" type="image/x-icon")
  link(rel="shortcut icon" href="favicon.png" type="image/x-icon")
  meta(name='description', content= 'Traditional Chinese Feng Shui Courses Accredited. Complete, professional Feng Shui consultant training courses by the Feng Shui Institute - the best feng shui course on the internet and the only accredited traditional Chinese distance learning feng shui practitioner course')
  meta(name='keywords', content= 'feng shui, online, class, course, distance learning, training, courses, accredited, classical, traditional, Chinese, consultant, professional, practitioner course, Chinese astrology, online, education, teaching, training, courses, learning, feng shui study, research, astrology, work at home, education, school, health, environment')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  block stylesheets
    style html { font-family: sans-serif; }


body
